---
import H1 from './H1.astro';
import { ModalItemCarta } from './react/modal/modal-react';

type pizzaPrice = {
  personal: number;
  mediana: number;
  grande: number;
};

type vinoType = {
  copa: number;
  botella: number;
};

type lassanaType = {
  plato: number;
};

interface Props {
  title: string;
  Alldata: {
    name: string;
    price: pizzaPrice | vinoType | lassanaType;
    ingredientes: string;
    img: ImageMetadata;
  }[];
}

const { title, Alldata } = Astro.props;
---

<H1>{title}</H1>
<section class='grid grid-cols-2 gap-10 max-w-screen-xl mx-auto'>
  {Alldata.map((data) => <ModalItemCarta client:load data={data} />)}
</section>
