---
import logo from '@Images/logo.png';
import { navLinks, redes } from '@lib/const';
---

<section class='container mx-auto flex gap-10'>
  <img src={logo.src} alt='logo' class='h-28' />
  <div class='flex-1'>
    <nav>
      <ul class='flex items-center text-sm gap-10 justify-center py-5'>
        {
          navLinks.map((link) => {
            return (
              <li>
                <a
                  class={
                    'text-white p-2 border-transparent border-2 font-bold  hover:text-lila/75 text-lg'
                  }
                  href={link.href}
                >
                  {link.label}
                </a>
              </li>
            );
          })
        }
      </ul>
    </nav>
    <div class='flex justify-end'>
      <div class='flex gap-2'>
        {
          redes.map((rds) => (
            <a
              target='_blank'
              href={rds.url}
              class='flex gap-1 items-center hover:bg-white rounded p-1 transition-all duration-300'
            >
              <span class=' bg-white rounded'>
                <img src={rds.icon.src} alt={rds.name} class='h-5' />
              </span>
              <p>{rds.username}</p>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</section>
