---
import { valores } from '@lib/const';
import H3 from './H3.astro';
import H1 from './H1.astro';
---

<section>
  <H1> NUESTROS VALORES</H1>
  <div
    class='p-10 grid grid-cols-[repeat(auto-fit,minmax(min(50px,100%),1fr))] gap-10 select-none'
  >
    {
      valores.map((valor) => (
        <div class='flex flex-col justify-center items-center border-2 rounded-xl p-5 gap-5 col-span-3 '>
          <img src={valor.img.src} width='170' class='h-[170px] rounded-md' />
          <div class='flex justify-between flex-col'>
            <H3>{valor.title}</H3>
          </div>
        </div>
      ))
    }
  </div>
</section>
