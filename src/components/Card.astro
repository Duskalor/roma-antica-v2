---
import H3 from './H3.astro';
const { data } = Astro.props;
const { title, img, description, reverse } = data;
---

<div class='p-5 rounded-xl border-2'>
  <H3 class='py-5'>{title}</H3>

  <div
    class={`flex flex-col ${reverse ? 'md:flex-row-reverse' : 'md:flex-row'} justify-between items-center`}
  >
    <img src={img.src} alt='' class='w-full md:w-[400px] mb-5 md:mb-0' />

    <span class='flex items-center w-full md:w-auto'>
      <p class='prose p-5 font-semibold text-lg'>
        {description}
      </p>
    </span>
  </div>
</div>
